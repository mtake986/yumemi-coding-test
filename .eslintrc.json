{
  "env": {
    "browser": true, // window, alert
    "node": true, // process
    "es6": true // process
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module" // import/export
  },
  "rules": {
    "no-console": ["warn"],
    "semi": ["error", "always"],
    "quotes": ["error", "double"],
    "indent": ["error", 2],
    // "no-unused-vars": ["warn"],
    "camelcase": ["warn"]
  },
  "extends": [
    "next/core-web-vitals",
    "plugin:testing-library/react",
    "plugin:jest-dom/recommended"
  ]
}
